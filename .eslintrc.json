{
  "extends": ["react-app", "prettier"],
  "plugins": ["prettier", "import"],
  "settings": {
    "import/internal-regex": "^@(src|client|assets|components|containers|context|hooks|i18n|routes|themes|config|core|container|services|store|types|scripts|utils|frameworks)"
  },
  "rules": {
    "prettier/prettier": "error",
    "no-console": "off",
    "react-hooks/exhaustive-deps": "off",
    "import/order": ["error", {
      "groups": ["builtin", "external", "internal", "parent", "sibling", "index"],
      "newlines-between": "always"
    }]
  }
}
